<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Exercise"
        android:background="@drawable/background">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/averia_libre_bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:id="@+id/final_txt1"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/final_txt1"
            android:elevation="8dp"
            android:layout_centerInParent="true"
            android:id="@+id/ex_img"/>


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ex_img"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/averia_libre"
            android:id="@+id/description"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="RESET"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/description"
            android:id="@+id/timer_reset"
            android:background="@drawable/button_des"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/description"
            android:layout_marginTop="15dp"
            android:id="@+id/timer_txt"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/averia_libre_bold"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="START"
            android:layout_marginTop="15dp"
            android:layout_below="@id/description"
            android:layout_toRightOf="@+id/timer_txt"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_des"
            android:id="@+id/timer_start"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/timer_reset"
            android:layout_marginTop="15dp"
            android:id="@+id/previous_exe"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:layout_marginLeft="125dp"/>


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/timer_reset"
            android:layout_marginTop="15dp"
            android:id="@+id/next_exe"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:layout_marginLeft="225dp"/>

    </RelativeLayout>
</ScrollView>

