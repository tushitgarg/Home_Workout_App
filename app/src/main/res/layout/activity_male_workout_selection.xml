<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaleWorkoutSelection"
    android:background="@drawable/background">


    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:id="@+id/text_exercise"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/averia_libre"
        android:textColor="#ffffff"/>

    <View
        android:layout_width="250dp"
        android:layout_marginLeft="25dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_exercise"
        android:background="#DC9D9EA7"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="25dp"
        android:id="@+id/card1"
        android:padding="8sp">

        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Select Level"
            android:textSize="25sp"
            android:fontFamily="@font/averia_libre"
            android:id="@+id/text4"
            android:textAlignment="center"
            android:layout_marginTop="15dp">
        </TextView>

        <View
            android:layout_width="200dp"
            android:layout_marginLeft="25dp"
            android:layout_height="2dp"
            android:layout_marginTop="60dp"
            android:background="#DC9D9EA7"
             />

        <Spinner
            android:id="@+id/spinner_selection_male"
            android:layout_width="200dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:textAlignment="center"
            android:fontFamily="@font/averia_libre"
            android:background="@drawable/button_des"
            android:layout_height="50dp"/>

</androidx.cardview.widget.CardView>

</RelativeLayout>